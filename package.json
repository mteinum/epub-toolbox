{
  "name": "epub-toolbox",
  "displayName": "EPUB Toolbox",
  "description": "Read and preview EPUB files directly in VS Code with full table of contents navigation",
  "version": "0.1.12",
  "publisher": "morten-teinum",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/mteinum/epub-toolbox.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "epubToolbox.epubPreview",
        "displayName": "EPUB Preview",
        "selector": [
          {
            "filenamePattern": "*.epub"
          }
        ],
        "priority": "default"
      }
    ],
    "languages": [
      {
        "id": "epub",
        "extensions": [
          ".epub"
        ],
        "aliases": [
          "EPUB"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "node esbuild.js",
    "compile-tests": "tsc -p ./tsconfig.test.json",
    "watch": "node esbuild.js --watch",
    "package": "vsce package",
    "test": "node ./out/test/runTest.js",
    "pretest": "npm run compile && npm run compile-tests",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^9.0.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "epubjs": "^0.3.93",
    "jszip": "^3.10.1"
  }
}
